<Window x:Class="SklyarovaDemka.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SklyarovaDemka"
        mc:Ignorable="d"
        Title="ChangePassword" MinHeight="400" MinWidth="400">
    <Grid Background="#ffed">
        <Button Content="Войти" HorizontalAlignment="Left" Margin="151,288,0,0" VerticalAlignment="Top" Width="98" Height="36" Click="Button_Click_input"/>
        <TextBlock Margin="146,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" FontWeight="Bold" FontSize="16" HorizontalAlignment="Left" Height="45"><Run Text=" "/><Run Language="ru-ru" Text="Смена пароля"/></TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="0,70,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,133,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="txtUsername" Margin="0,96,0,0" TextChanged="txtUsername_TextChanged" />
        <PasswordBox HorizontalAlignment="Center" Margin="0,167,0,0"  VerticalAlignment="Top" Width="120" x:Name="txtPassword"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,214,0,0" TextWrapping="Wrap" Text="Проверка пароля" VerticalAlignment="Top"/>
        <PasswordBox HorizontalAlignment="Center" Margin="0,247,0,0" VerticalAlignment="Top" Width="120" x:Name="txtPassword_Copy"/>

    </Grid>
</Window>
