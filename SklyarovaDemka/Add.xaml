<Window x:Class="SklyarovaDemka.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SklyarovaDemka"
        mc:Ignorable="d"
            Title="Add"  MinHeight="450" MinWidth="400">
    <Grid>
        <Label Content=" Добавление пользователя" HorizontalAlignment="Center" Height="38" Margin="0,33,0,0" VerticalAlignment="Top" Width="178" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Фамилия"/></TextBlock>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="FirstNameTextBox" Margin="0,96,0,0" />
        <TextBlock HorizontalAlignment="Center" Margin="0,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Имя" /></TextBlock>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="UserNameTextBox" Margin="0,146,0,0" />
        <TextBlock HorizontalAlignment="Center" Margin="0,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Отчество"/></TextBlock>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="LastNameTextBox" Margin="0,199,0,0" />
        <TextBlock HorizontalAlignment="Center" Margin="0,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="email"/></TextBlock>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="EmailTextBox" Margin="0,247,0,0" />
        <ComboBox HorizontalAlignment="Center" Margin="0,299,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,278,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="роль"/></TextBlock>
        <Button Content="Добавить" HorizontalAlignment="Center" Margin="0,380,0,0" VerticalAlignment="Top" Height="29" Width="70"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,331,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="ru-ru" Text="Пароль"/></TextBlock>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" x:Name="PasswordTextBox" Margin="0,357,0,0" />

    </Grid>
</Window>
